<div class="container shadow-lg rounded px-0 my-5">
  <div class="row justify-content-center">
    <h2 class="text-dark py-4">プロフィール編集</h2>
  </div>
  
  <%= form_with model: @user do |f| %>
    <div class="row p-3">
      <div class="col text-right">
        <label for="inputName">Name</label>
      </div>
      <div class="col">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
    </div>
    <div class="row p-3">
      <div class="col text-right">
        <label for="inputImage">ProfileImage</label>
      </div>
        <div class="col">
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>
      </div>
    </div>
    <div class="row p-4">
      <div class="col text-center">
        <%= f.submit "変更を保存", class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
